{% extends 'homebase.html.twig' %}
{% block title %} {{ setting[0].title }} {% endblock %}
{% block keywords %}{{ setting[0].keywords }}{% endblock %}
{% block description %}{{ setting[0].description }}{% endblock %}


{% block body %}
    {% block slider %} {% include "home/slider.html.twig" %} {% endblock %}
    <div id="colorlib-reservation">
        <div class="container">
            <div class="row">
                <div class="col-md-12 search-wrap">
                    <form method="post" action="{{ path('home_car_list') }}" class="colorlib-form">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="date">Check-in:</label>
                                    <div class="form-field">
                                        <i class="icon icon-calendar2"></i>
                                        <input size="16" type="text" required id="date" class="form-control date" name="checkin"
                                               placeholder="Check-in date">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="date">Departure</label>
                                    <div class="form-field">
                                        <input type="text" id="departure" class="form-control" name="departure" required placeholder="Kalkış Noktası">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="date">Arrival</label>
                                    <div class="form-field">
                                       <input type="text" id="arrival" class="form-control" required name="arrival" placeholder="Varış Noktası">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="date">Time</label>
                                    <div class="form-field">
                                        <input type="time" id="time" class="form-control" required name="usr_time">
                                    </div>
                                </div>
                            </div>

                                <div class="col-md-2">
                                    <input type="submit" name="submit" id="submit" value="Search"
                                           class="btn btn-primary btn-block">
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% extends 'adminbase.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation[0].id }}</td>
            </tr>
            <tr>
                <th>User Name</th>
                <td>
                    <a href="{{ path('admin_user_show', {'id': reservation[0].userid}) }}">{{ reservation[0].usname }} </a>
                </td>
            </tr>
            <tr>
                <th>Carid</th>
                <td>{{ reservation[0].carid }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ reservation[0].name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ reservation[0].surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reservation[0].email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ reservation[0].phone }}</td>
            </tr>
            <tr>
                <th>Checkin</th>
                <td>{{ reservation[0].checkin ? reservation[0].checkin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Departure</th>
                <td>{{ reservation[0].departure}}</td>
            </tr>
            <tr>
                <th>Arrival</th>
                <td>{{ reservation[0].arrival }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ reservation[0].time }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ reservation[0].ip }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ reservation[0].note }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ reservation[0].message }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ reservation[0].status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ reservation[0].created_at ? reservation[0].created_at|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ reservation[0].updated_at ? reservation[0].updated_at|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('admin_reservation_edit', {'id': reservation[0].id}) }}">edit</a>

    </div>
{% endblock %}

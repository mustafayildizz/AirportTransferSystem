{% extends 'adminbase.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1>Image</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in image %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.title }}</td>
                <td><img src="{{ asset('uploads/images/' ~  company.image) }}"></td>
                <td> {{ include('admin/image/_delete_form.html.twig') }} </td>
            </tr>
           
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_image_index') }}">back to list</a>

    <a href="{{ path('admin_image_edit', {'id': image.id}) }}">edit</a>

    {{ include('admin/image/_delete_form.html.twig') }}
{% endblock %}

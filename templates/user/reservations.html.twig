{% extends 'homebase.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    {{ include('home/sidebar.html.twig') }}
    <div class="main-panel">
        <div class="content-wrapper">
            <h1>Reservation index</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>Car</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Checkin</th>
                    <th>Departure</th>
                    <th>Arrival</th>
                    <th>Message</th>
                    <th>Status</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.carname }}</td>
                        <td>{{ reservation.name }}</td>
                        <td>{{ reservation.surname }}</td>
                        <td>{{ reservation.email }}</td>
                        <td>{{ reservation.checkin|date("m/d/y") }}</td>
                        <td>{{ reservation.departure }}</td>
                        <td>{{ reservation.arrival }}</td>
                        <td>{{ reservation.message }}</td>
                        <td>{{ reservation.status }}</td>
                        <td>
                            <a href="{{ path('user_reservations_show', {'id': reservation.id}) }}"
                               class="btn btn-primary">Show</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="19">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    </div>



{% endblock %}
